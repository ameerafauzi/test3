<a href="{{ collection.url }}" class="grid-item {{ section.settings.collections_anim_style }} {{ section.settings.collections_thumb_style }}">

	{% if collection.image %}

		{% assign crop_img_url = '640x' %}
		{% assign crop_img_url_retina = '1024x' %}

		<img src="{{ collection | img_url: crop_img_url }}" data-src-retina="{{ collection | img_url: crop_img_url_retina }}" srcset="data:image/gif;base64,R0lGODlhAQABAJH/AP///wAAAMDAwAAAACH5BAEAAAIALAAAAAABAAEAAAICVAEAOw==" alt="{{ collection.image.alt | escape }}">

	{% else %}

		<img src="{{ 'svg_collection-1.svg' | asset_url }}" data-src-retina="{{ 'svg_collection-1.svg' | asset_url }}" alt="" />

	{% endif %}

  <div class="caption">

  	{% if section.settings.collections_anim_style == 'one' %}

    	<div class="top">
	    	<h2>{{ collection.title}}</h2>
	    </div>

	    <div class="bottom">
	    	<span class="info">{{ 'collections.view_products' | t }} &rarr;</span>
	    </div>

  	{% else %}

  		<div>
  			<div><h2>{{ collection.title}}</h2></div>
  		</div>

  	{% endif %}

	</div>

</a>